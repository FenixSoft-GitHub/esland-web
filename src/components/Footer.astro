---
import Logo from "./Logo.astro";
import Link from "@/components/Link.astro"
import { getLangFromUrl, useTranslations, useTranslatedPath } from "@/i18n/utils"
import { getI18N } from "@/i18n/index"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<footer class="bg-black/40">
    <div class="mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8">
        
        <div class="md:flex md:justify-between">
        
            <div class="mb-6 md:mb-0 flex flex-col">
                <a 
                    href="https://premiosesland.com/" 
                    class="-mt-14 flex items-center justify-center mb-4">
                    <Logo class="h-auto w-24" />
                </a>

                <div class="flex gap-x-4 justify-center">
                    <a href="https://www.instagram.com/premiosesland/" class="text-gray-500 hover:text-white duration-300">
                        <svg
                            class="size-5"
                            xmlns="http://www.w3.org/2000/svg"
                            width="256"
                            height="256"
                            preserveAspectRatio="xMidYMid"
                            viewBox="0 0 256 256"
                            ><path
                                fill="currentColor"
