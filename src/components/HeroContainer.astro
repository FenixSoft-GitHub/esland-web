---
interface Props {
    img: string
}

const { img } = Astro.props
---

<div
    style={`background-image: url('${img}');`}
    class="bg-no-repeat bg-cover cp-v relative h-[90vh] max-w-[100vw] w-full"
>
    <div class="absolute inset-0 m-auto w-full h-full flex flex-col justify-center items-center">
        <slot />
    </div>
</div>